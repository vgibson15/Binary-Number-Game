def round ():
    max_round = 0
    count = 0
     
    if max_round == 0:
        count = count + 1
        max_round = max_round + count
    for count in range(max_round):
        count = count + 1
        print("Round", max_round)
        print('---------------------------------------------------------')
    else:
        return max_round
              
